<UserControl x:Class="Demo.UI.Controls.LayoutPanelsControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.UI.Controls"
        mc:Ignorable="d"
        Height="450" Width="800">
    
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Rectangle Fill="BlueViolet" Width="40" Margin="5"/>
            <Rectangle Fill="BlueViolet" Width="40" Margin="5"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Rectangle Fill="BlueViolet" Height="40" Margin="5"/>
            <Rectangle Fill="BlueViolet" Height="40" Margin="5"/>
        </StackPanel>

        <Rectangle Fill="Orange"
                   Grid.Column="1"
                   Grid.RowSpan="2"/>

        <Canvas Grid.Row="2" Grid.ColumnSpan="2">
            <Rectangle Height="60"
                       Width="60"
                       Fill="Blue"
                       Canvas.Left="50"/>
            <Rectangle Height="60"
                       Width="60"
                       Fill="Red"
                       Canvas.Top="50"/>
            <Rectangle Height="60"
                       Panel.ZIndex="1"
                       Width="60"
                       Fill="Yellow"
                       Canvas.Right="50"
                       Canvas.Bottom="20"/>
            <Rectangle Height="60"
                       Width="60"
                       Fill="Green"
                       Canvas.Right="20"
                       Canvas.Bottom="55"/>
        </Canvas>
    </Grid>
</UserControl>
